PORT=8787
HOST=127.0.0.1

# Comma-separated list of allowed origins, or "*" for all
CORS_ORIGIN=*

# Gemini / Nano Banana
NANO_BANANA_API_KEY=

# Optional overrides
NANO_BANANA_MODEL=gemini-3-pro-image-preview
NANO_BANANA_IMAGE_SIZE=2K

# Optional country allowlist (ISO-3166 alpha-2), e.g. "RO" or "RO,MD"
# Requires trusted geo headers from your reverse proxy/CDN.
COUNTRY_ALLOWLIST=
COUNTRY_HEADER_NAMES=cf-ipcountry,x-vercel-ip-country,x-country-code,x-geo-country
ALLOW_UNKNOWN_COUNTRY=false
